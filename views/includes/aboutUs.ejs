<% layout("/layouts/boilerplate") %>
  <style>
   
    .about-us-header {
      background: #000000;
      color: #fff;
      padding: 50px 0;
      text-align: center;
    }
    .about-us-section {
      padding: 50px 0;
      
    }
    .team-member img {
      border-radius: 50%;
      max-width: 150px;
    }
    .team-member {
      text-align: center;
      margin-bottom: 30px;
    }
    .team-member h5 {
      margin-top: 15px;
    }
    .mission-statement {
      background: #fff;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .card1{
        background-color: #000000;
        color: white;
        padding: 20px;
    }
    .main-card{
        padding: 20px;
    }
  </style>
</head>
<body>
  <!-- About Us Header -->
  <header class="about-us-header">
    <div class="container">
      <h1>About RentoBuddy</h1>
      <p>Your trusted partner for renting properties around the world.</p>
    </div>
  </header>

  <!-- Mission Statement Section -->
  <section class="about-us-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="mission-statement">
            <h2>Our Mission</h2>
            <p>
              At RentoBuddy, our mission is to simplify the process of finding and renting properties worldwide.
              We are committed to providing a seamless and transparent experience for both renters and property owners.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="about-us-section">
    <div class="container">
      <h2 class="text-center">Meet Our Team</h2>
      <div class="row justify-content-center">
        <div class="col-md-3 team-member">
          <img src="https://via.placeholder.com/150" alt="Team Member 1">
          <h5>Abhi Goyal</h5>
          <p>CEO</p>
        </div>
        <div class="col-md-3 team-member">
          <img src="https://via.placeholder.com/150" alt="Team Member 2">
          <h5>Bharat Sharma</h5>
          <p>CTO</p>
        </div>
       
        <!-- Add more team members as needed -->
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="about-us-section">
    <div class="container">
      <h2 class="text-center">Our Values</h2>
      <div class="row main-card">
        <div class="col-md-4 card1" >
          <h4>Integrity</h4>
          <p>We uphold the highest standards of integrity in all our actions.</p>
        </div>
        <div class="col-md-4 card1">
          <h4>Customer Commitment</h4>
          <p>We develop relationships that make a positive difference in our customers' lives.</p>
        </div>
        <div class="col-md-4 card1">
          <h4>Quality</h4>
          <p>We provide outstanding products and unsurpassed service that, together, deliver premium value to our customers.</p>
        </div>
      </div>
    </div>
  </section>

