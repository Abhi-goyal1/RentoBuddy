<% layout("/layouts/boilerplate") %>

<style>
  .filters{
    display: flex;
    flex-wrap: wrap;
    font-size: 12px;
    align-items: center;
  
   
    
  }
  .filter{
    text-align: center;
    margin-right:2rem;
    margin-top: 1.3rem;
    
    
  }
  .filter:hover{
  
    cursor: pointer;
    color: #D50100;

  }
  /* .sticky {
   
  position: sticky;
  top: 13%;
  z-index: 100;
  background-color: white;

 
} */

@media only screen and (max-width: 1200px){
.domes{
  display: none;
}
.arctic{
  display: none;
}
}
@media only screen and (max-width: 992px){
.farms{
  display: none;
}
.camping{
  display: none;
}

}


.tax-info{
  display: none;
}
.tax-toggle{
  border: 1px solid black;
  border-radius: 50px;
  height: 2.5rem;
  padding: 0.7rem;
  font-size: 12px;
  display: flex;
  align-items: center;
}
.tax-toggle input{
 
}
@media only screen and (max-width: 768px){
.tax-toggle{
  font-size:12px;
  height: 2rem;
  padding: 0.4rem;

}
.filter i,p{
  font-size: 12px;
}
.swimming{
  display: none;
}
}
@media only screen and (max-width: 517px){
.mount{
  display: none;
}
.filter{
  font-size: 10px;
}
}
@media only screen and (max-width: 432px){
.city{
  display: none;
}

}


</style>
  <body>

   <div class=" filters sticky">
    <div class="filter">
       <div><i class="fa-solid fa-fire"></i></div>
       <p>Trending</p>
    </div>
    <div class="filter">
       <div><i class="fa-solid fa-bed"></i></div>
       <p>Rooms</p>
    </div>
    <div class="filter city">
       <div><i class="fa-solid fa-mountain-city"></i></div>
       <p>Iconic cities</p>
    </div>
    <div class="filter mount">
       <div><i class="fa-brands fa-fort-awesome"></i></div>
       <p>Mountains</p>
    </div>
    <div class="filter swimming ">
       <div><i class="fa-solid fa-person-swimming"></i></div>
       <p>Amazing Pools</p>
    </div>
    <div class="filter camping">
       <div><i class="fa-solid fa-campground"></i></div>
       <p>Camping</p>
    </div>
    <div class="filter farms">
       <div><i class="fa-solid fa-cow"></i></div>
       <p>Farms</p>
    </div>
    <div class="filter arctic">
       <div><i class="fa-regular fa-snowflake"></i></div>
       <p>Arctic </p>
    </div>

    <div class="filter domes">
       <div><i class="fa-solid fa-igloo"></i></div>
       <p>Domes</p>
    </div>
   
   

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input  class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Include taxes</label>
      </div>
    </div>
   </div>


  

  <div class="container">
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-3">
        <% for(let listing of allListings) { %>
            <div class="col mb-4">
                <a href="listings/<%= listing._id %>" class="listing-link">
                    <div class="card listing-card " >
                        <img src="<%= listing.image.url %>" style="height: 20rem;" class="card-img-top" alt="...">
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %></b> <br>
                                &#8377; <%= listing.price.toLocaleString("en-In") %> /night
                                <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                            </p>
                        </div>
                        <div class="card-img-overlay"></div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</div>

   <script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", ()=>{
      let taxInfo = document.getElementsByClassName("tax-info");
      for(info of taxInfo){
        if(info.style.display != "inline"){
          info.style.display = "inline";
        }else{
          info.style.display = "none";
        }
       
      }
    })
   </script>
   
  </body>
